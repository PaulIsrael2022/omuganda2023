<form id="traditionForm" class="needs-validation" novalidate>

    <div class="mb-3">
      <label for="traditionName" class="form-label">Tradition Name</label>
      <input type="text" class="form-control" id="traditionName" name="traditionName" required>
      <div class="invalid-feedback">
        Please provide a tradition name.
      </div>
    </div>
  
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea class="form-control" id="description" name="description" required></textarea>
      <div class="invalid-feedback">
        Please provide a description.
      </div>
    </div>
  
    <div class="mb-3">
      <label for="origins" class="form-label">Origins</label>
      <input type="text" class="form-control" id="origins" name="origins">
    </div>
  
    <div class="mb-3">
      <label for="celebration" class="form-label">Celebration</label>
      <input type="text" class="form-control" id="celebration" name="celebration">
    </div>
  
    <div class="mb-3">
      <label for="practices" class="form-label">Practices</label>
      <input type="text" class="form-control" id="practices" name="practices">
    </div>
  
    <button type="submit" class="btn btn-primary">Submit</button>
  
  </form>
  
  <script>
  // JavaScript validation
  const form = document.getElementById('traditionForm');
  form.addEventListener('submit', e => {
    if (!form.checkValidity()) {
      e.preventDefault();
      e.stopPropagation();
    }
    
    form.classList.add('was-validated');
  });
  </script>